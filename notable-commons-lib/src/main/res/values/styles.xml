<resources>
    <!--START Library specific styles-->
    <!--START Launcher styles-->
    <style name="LauncherFragmentStyle">
        <item name="android:padding">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="LauncherEditTextStyle">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LauncherSubjectStyle" parent="TextViewStyleH1">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!--END Launcher styles-->
    <!--START Theme-->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_dark</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.Dark">
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--END Theme-->
    <!--END Library specific styles-->


    <!--RootView styles-->
    <style name="DefaultActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ContentContainer">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <!--TextView Styles-->
    <style name="TextViewStyleHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:text">@string/placeholder_text</item>
    </style>

    <style name="TextViewStyleH1" parent="TextViewStyleHeader">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">@dimen/textSizeH1</item>
    </style>

    <style name="TextViewStyleH2" parent="TextViewStyleHeader">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/textSizeH2</item>
    </style>

    <style name="TextViewStyleH2SingleLine" parent="TextViewStyleH2">
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewStyleH3" parent="TextViewStyleHeader">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/textSizeH3</item>
    </style>

    <style name="TextViewStyleDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:text">@string/placeholder_desc</item>
    </style>

    <style name="TextViewStyleDescSingleLine" parent="TextViewStyleDesc">
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewDate">
        <item name="android:text">@string/placeholder_date</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">#bdbdbd</item>
    </style>

    <style name="EditTextStyleHeader" parent="TextViewStyleH2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="EditTextStyleFillSpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">top|start</item>
    </style>

    <style name="ItemStyle">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <!--todo: clean this page up-->
    <style name="listViewItem">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>
